<!-- Form 21 (delete) -->
<form id="form-21">
    <div class="card border-danger mb-3">
        <h2 class="card-header bg-danger text-white border-danger h5">
            Delete
        </h2>
        <div class="card-body border-danger">

            <p class="mb-4">Deletion is permanent. Proceed with caution. While you can un-hide a hidden evaluation with the help of the application developer, you can never recover a deleted evaluation.</p>

            <div class="mb-4">
                <label for="hideYesOrNo" class="form-label">Are you sure you want to delete this evaluation?</label>
                <select class="form-select" id="hideYesOrNo" name="hideYesOrNo">
                    <option selected>- Select -</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>

            <p class="mb-4">Use the Submit button to delete this evaluation.</p>

        </div>
        <div class="card-footer border-danger p-3">
            <button class="btn btn-danger text-white" type="submit">Submit</button>
            <a class="btn btn-outline-secondary ms-2" href=".">Exit without submitting</a>
        </div>
    </div>
</form>
<!-- /#form-21 (delete) -->
