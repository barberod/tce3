                                        </select>
                                        <button class="btn btn-outline-primary" type="button">Go</button>
                                    </div>
                                </div>
                            </div>
                            <!-- /#page-navigation -->
                        </div>
                    </div>
                    <!-- /#table-institutions -->
                </div>
            </div>
            
        {% endif %}
    {% endif %}
{% endblock %}

{% block scripts %}
