{% extends 'html/base-rmail.html.twig' %}

{% block inner %}

<p>Dear <strong>{{ emailData.recipient.displayName }}</strong>,</p>

<p>Transfer Credit Evaluation <strong>#{{ emailData.evaluation.id }}</strong> was assigned to you on <strong>{{ 'now'|date('Y-m-d H:i:s') }}</strong>.</p>

<p>Evaluation:</p>

<table role="presentation" width="100%" style="max-width: 500px;" border="0" cellpadding="0" cellspacing="0">
    <tr style="background-color: #ffffff; width: 500px; padding: 0; margin: 0; border: none;">
        <td style="background-color: transparent; width: 20%; padding: 0; margin: 0; border: none;">
            Course: 
        </td>
        <td style="background-color: transparent; width: 80%; padding: 0; margin: 0; border: none;">
            {{ emailData.evaluation.courseSubjCode }} {{ emailData.evaluation.courseCrseNum }}, {{ emailData.evaluation.courseSubjCode }} {{ emailData.evaluation.courseTitle }}
        </td>
    </tr>
    <tr style="background-color: #ffffff; width: 500px; padding: 0; margin: 0; border: none;">
        <td style="background-color: transparent; width: 20%; padding: 0; margin: 0; border: none;">
            Institution: 
        </td>
        <td style="background-color: transparent; width: 80%; padding: 0; margin: 0; border: none;">
            {% if evaluation.institution is not empty %}
                {{ evaluation.institution.name }}
            {% elseif evaluation.institutionOther is not empty %}
                {{ evaluation.institutionOther }}
            {% endif %}
        </td>
    </tr>
</table>

<p>Requester:</p>

<table role="presentation" width="100%" style="max-width: 500px;" border="0" cellpadding="0" cellspacing="0">
    <tr style="background-color: #ffffff; width: 500px; padding: 0; margin: 0; border: none;">
        <td style="background-color: transparent; width: 20%; padding: 0; margin: 0; border: none;">
            Name: 
        </td>
        <td style="background-color: transparent; width: 80%; padding: 0; margin: 0; border: none;">
            {{ emailData.requester.dn }}
        </td>
    </tr>
    <tr style="background-color: #ffffff; width: 500px; padding: 0; margin: 0; border: none;">
        <td style="background-color: transparent; width: 20%; padding: 0; margin: 0; border: none;">
            GTID: 
        </td>
        <td style="background-color: transparent; width: 80%; padding: 0; margin: 0; border: none;">
            {{ emailData.requester.orgID }}
        </td>
    </tr>
</table>

<p>Link:</p>

<table role="presentation" width="100%" style="max-width: 500px;" border="0" cellpadding="0" cellspacing="0">
    <tr style="background-color: #ffffff; width: 500px; padding: 0; margin: 0; border: none;">
        <td style="background-color: transparent; width: 100%; padding: 0; margin: 0; border: none;">
            <a href="https://dev.transfercredit.gatech.edu/secure/assignee/evaluation/{{ emailData.evaluation.id }}">https://dev.transfercredit.gatech.edu/secure/assignee/evaluation/{{ emailData.evaluation.id }}</a>
        </td>
    </tr>
</table>

<p>Thank you,</p>

<p>Transfer Credit Evaluation<br>
Registrar's Office<br>
Georgia Tech</p>

{% endblock %}